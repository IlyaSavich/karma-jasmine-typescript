{
  "compileOnSave": false,
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "paths": {
      "*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
